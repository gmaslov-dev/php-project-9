{% extends "layout.twig" %}

{% block content %}
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <h1>Сайт: {{ url.getName }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-bordered table-responsive table-hover" data-test="url">
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>{{ url.getId }}</td>
                        </tr>
                        <tr>
                            <td>Имя</td>
                            <td>{{ url.getName }}</td>
                        </tr>
                        <tr>
                            <td>Дата создания</td>
                            <td>{{ url.getCreatedAt }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        {# TODO обдумать возможность вынесения в отдельный файл куска шаблона с формой и таблицей #}
        {% include './checks/index.twig' with {urlId: url.getId, checks: checks } %}
    </div>
{% endblock %}