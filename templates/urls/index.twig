{% extends "layout.twig" %}

{% block title %}Главная страница{% endblock %}

{% block content %}
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <h1>Сайты</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-bordered table-responsive table-hover" data-test="urls">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Имя</th>
                            <th>Последняя проверка</th>
                            <th>Код ответа</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for url in urls %}
                        <tr>
                            <td>{{ url.id }}</td>
                            <td><a href="{{ url_for('urls.show', { 'id': url.id }) }}">{{ url.name }}</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}