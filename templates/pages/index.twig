{% extends "layout.twig" %}

{% block title %}Главная страница{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row d-flex justify-content-center">
         <div class="col-10 bg-light border rounded-3 p-5">
             <div class="row">
                 <h1 class="display-2 text-center">Анализатор страниц</h1>
                 <p class="lead">Безопасно проверяйте сайты на SEO пригодность</p>
             </div>
             <div class="row">
                 <form action="/urls" method="post" class="d-flex">
                     <div class="col-8">
                         <label class="visually-hidden" for="name">Url сайта</label>
                         <input
                                 class="form-control form-control-lg"
                                 name="url[name]"
                                 id="name"
                                 type="text"
                                 placeholder="http://www.example.com"
                         >
                     </div>
                     <div class="col-2">
                         <button class="btn btn-primary btn-lg ms-3 px-5 text-uppercase mx-3" type="submit">Проверить</button>
                     </div>
                 </form>
            </div>
         </div>
    </div>
</div>
{% endblock %}